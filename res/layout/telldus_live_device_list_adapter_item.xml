<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:remote="http://schemas.android.com/apk/res/se.newbie.remote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/telldus_live_device_list_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_light_off" />

    <TextView
        android:id="@+id/telldus_live_device_list_item_headline"
        style="?telldusLiveDeviceListItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:text="Header" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

	    <se.newbie.remote.tellduslive.gui.TelldusLiveActionButton
	        android:id="@+id/telldus_live_device_list_item_on"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="?buttonTertiaryBackground"
	        android:src="@drawable/ic_light_on" />
	    
	    <se.newbie.remote.tellduslive.gui.TelldusLiveActionButton
	        android:id="@+id/telldus_live_device_list_item_off"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="?buttonTertiaryBackground"
	        android:src="@drawable/ic_light_off" />
        
    </LinearLayout>
    
</RelativeLayout>