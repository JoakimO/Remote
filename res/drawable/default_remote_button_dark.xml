<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/layout_primary_light_color"/>
            <stroke
                android:width="1dp"
                android:color="#171717"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/layout_primary_normal_color"/>
            <stroke
                android:width="1dp"
                android:color="#171717"/>
        </shape>
    </item>
 </selector>