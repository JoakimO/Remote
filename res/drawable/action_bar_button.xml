<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/but_square_pushed"
        android:state_pressed="true"
        >
        <shape>
            <gradient
                android:startColor="@color/layout_primary_normal_color"
                android:endColor="@color/layout_primary_dark_color"
                android:angle="270" />
			<stroke android:width="1dp" android:color="@color/layout_primary_dark_color"/>
            <corners android:radius="12dp" />
            <padding android:left="20dp" android:top="0dp"
                android:right="20dp" android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/layout_secondary_normal_color"
                android:endColor="@color/layout_secondary_dark_color"
                android:angle="270" />
			<stroke android:width="1dp" android:color="@color/layout_primary_dark_color"/>
            <corners android:radius="12dp" />
            <padding android:left="20dp" android:top="0dp"
                android:right="20dp" android:bottom="0dp" />
        </shape>
    </item>
 </selector>