<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF656565"
                android:centerColor="#FF555555"
                android:endColor="#FF858585"
                android:type="linear"
                android:angle="270" />
                        
            <stroke
                android:width="1dp"
                android:color="#FF202020"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#80707070"
                android:centerColor="#80606060"
                android:endColor="#80909090"
                android:type="linear"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#FF202020"/>
        </shape>
    </item>
 </selector>