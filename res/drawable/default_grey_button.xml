<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF252525"
                android:centerColor="#FF151515"
                android:endColor="#FF454545"
                android:type="linear"
                android:angle="270" />
                        
            <stroke
                android:width="1dp"
                android:color="#FF101010"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#80303030"
                android:centerColor="#80202020"
                android:endColor="#80505050"
                android:type="linear"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#FF101010"/>
        </shape>
    </item>
 </selector>