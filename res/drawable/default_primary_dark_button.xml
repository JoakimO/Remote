<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/DefaultPrimaryDarkColor"
                android:centerColor="@color/DefaultPrimaryShadowDarkColor"
                android:endColor="@color/DefaultPrimaryHighlightDarkColor"
                android:type="linear"
                android:angle="270" />
                        
            <stroke
                android:width="1dp"
                android:color="@color/DefaultPrimaryShadowDarkColor"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/DefaultPrimaryDarkColor"
                android:centerColor="@color/DefaultPrimaryShadowDarkColor"
                android:endColor="@color/DefaultPrimaryHighlightDarkColor"
                android:type="linear"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="@color/DefaultPrimaryShadowDarkColor"/>
        </shape>
    </item>
 </selector>