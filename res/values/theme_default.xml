<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="DefaultTheme" parent="android:style/Theme.Holo">
	    <!-- Colors -->
		<item name="primaryHighlightLightColor">@color/DefaultPrimaryHighlightLightColor</item>
		<item name="primaryHighlightColor">@color/DefaultPrimaryHighlightColor</item>
		<item name="primaryHighlightDarkColor">@color/DefaultPrimaryHighlightDarkColor</item>
		<item name="secondaryHighlightLightColor">@color/DefaultSecondaryHighlightLightColor</item>
		<item name="secondaryHighlightColor">@color/DefaultSecondaryHighlightColor</item>
		<item name="secondaryHighlightDarkColor">@color/DefaultSecondaryHighlightDarkColor</item>
		<item name="tertiaryHighlightLightColor">@color/DefaultTertiaryHighlightLightColor</item>
		<item name="tertiaryHighlightColor">@color/DefaultTertiaryHighlightColor</item>
		<item name="tertiaryHighlightDarkColor">@color/DefaultTertiaryHighlightDarkColor</item>
		
		<item name="primaryLightColor">@color/DefaultPrimaryLightColor</item>
		<item name="primaryColor">@color/DefaultPrimaryColor</item>
		<item name="primaryDarkColor">@color/DefaultPrimaryDarkColor</item>
		<item name="secondaryLightColor">@color/DefaultSecondaryLightColor</item>
		<item name="secondaryColor">@color/DefaultSecondaryColor</item>
		<item name="secondaryDarkColor">@color/DefaultSecondaryDarkColor</item>
		<item name="tertiaryLightColor">@color/DefaultTertiaryLightColor</item>
		<item name="tertiaryColor">@color/DefaultTertiaryColor</item>
		<item name="tertiaryDarkColor">@color/DefaultTertiaryDarkColor</item>
		
		<item name="primaryShadowLightColor">@color/DefaultPrimaryShadowLightColor</item>
		<item name="primaryShadowColor">@color/DefaultPrimaryShadowColor</item>
		<item name="primaryShadowDarkColor">@color/DefaultPrimaryShadowDarkColor</item>
		<item name="secondaryShadowLightColor">@color/DefaultSecondaryShadowLightColor</item>
		<item name="secondaryShadowColor">@color/DefaultSecondaryShadowColor</item>
		<item name="secondaryShadowDarkColor">@color/DefaultSecondaryShadowDarkColor</item>
		<item name="tertiaryShadowLightColor">@color/DefaultTertiaryShadowLightColor</item>
		<item name="tertiaryShadowColor">@color/DefaultTertiaryShadowColor</item>
		<item name="tertiaryShadowDarkColor">@color/DefaultTertiaryShadowDarkColor</item>
	    
	    <!-- Backgrounds -->
		<item name="buttonPrimaryBackground">@drawable/default_primary_button</item>
		<item name="buttonPrimaryLightBackground">@drawable/default_primary_light_button</item>	
		<item name="buttonPrimaryDarkBackground">@drawable/default_primary_dark_button</item>
		<item name="buttonPrimaryDarkRoundBackground">@drawable/default_primary_dark_round_button</item>
		<item name="buttonTertiaryBackground">@drawable/default_tertiary_button</item>
		<item name="remoteBackground">@drawable/default_remote_background</item>	
		
		<!-- Player -->
		<item name="playerPreviousIcon">@drawable/ic_act_prev</item>
		<item name="playerStopIcon">@drawable/ic_act_stop</item>
		<item name="playerPauseIcon">@drawable/ic_act_pause</item>
		<item name="playerPlayIcon">@drawable/ic_act_play</item>
		<item name="playerNextIcon">@drawable/ic_act_next</item>
		<item name="playerTextStyle">@style/DefaultPlayerText</item>
		<item name="playerHeaderTextStyle">@style/DefaultPlayerText.Header</item>
		<item name="playerProgressionTextStyle">@style/DefaultPlayerText.Progression</item>
		<item name="playerSeekBarStyle">@style/DefaultPlayerSeekBar</item>
		
		<!-- Telldus Live -->    
		<item name="telldusLiveDeviceListItemStyle">@style/DefaultPlayerText.Header</item>
		    	
	</style>
	
	<style name="DefaultPlayerSeekBar" parent="android:Widget.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/default_player_seek_bar_background</item>
		<item name="android:indeterminateDrawable">?secondaryDarkColor</item>
		<item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@drawable/ic_act_next</item>
        <item name="android:thumbOffset">2dp</item>
		<item name="android:minHeight">4dp</item>
		<item name="android:maxHeight">6dp</item>
	</style>	    
	    
	
    <style name="DefaultPlayerText" parent="@android:style/TextAppearance">
        <item name="android:textColor">?secondaryLightColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultPlayerText.Progression">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>	            	            
        
    <style name="DefaultPlayerText.Header">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>	            	    
	    
	<style name="DefaultTheme.Light">

	</style>
